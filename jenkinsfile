pipeline {
   agent any
   tools {
      maven 'Maven'
   }
   stages {
       stage('Build') {
                steps {
                    snDevOpsStep ()
                    echo 'Building'
                    sh 'mvn -X clean install -DskipTests'
                }
       }
      stage('Test') {
           steps {
               snDevOpsStep ()
               sh 'mvn test'
           }
          post {
                always {
                    junit '**/target/surefire-reports/*.xml' 
                }
          }
        }
    
      stage('Publish') {
             steps{
                  snDevOpsStep ()
                  sleep 30
                  echo "sonar scan in progress"       
              }
      }
      
       stage('Deploy') {
             steps{
                  snDevOpsStep ()
                  snDevOpsChange()
                  echo "deployment started"       
              }
      }
      
  }
}
