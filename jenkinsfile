pipeline {
   agent any
   tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
   stages {
       stage ('Build') {
            steps {
                snDevOpsStep ()
                echo "Build Started"
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            
        }
      stage('Test') {
           steps {
               snDevOpsStep ()
               echo "Test in progress"
           }
          post {
                success {
                    junit '**/target/surefire-reports/*.xml' 
                }
          }
        }
    
      stage('Publish') {
             steps{
                  snDevOpsStep ()
                  sleep 30
                  echo "sonar scan in progress"     
              }
      }
      
       stage('Deploy') {
             steps{
                  snDevOpsStep ()
                  snDevOpsChange()
                  echo 'deployment started'      
              }
      }
      
  }
}
