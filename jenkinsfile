pipeline {
   agent any
   tools {
      maven 'Maven'
   }
   stages {
       stage('Build') {
                steps {
                    snDevOpsStep ()
                    echo 'Building'
                    
                }
       }
      stage('Test') {
           steps {
               snDevOpsStep ()
               
           }
          post {
                always {
                    junit '**/target/surefire-reports/*.xml' 
                }
          }
        }
    
      stage('Publish') {
             steps{
                  snDevOpsStep ()
                  sleep 30
                  echo 'sonar scan in progress'      
              }
      }
      
       stage('Deploy') {
             steps{
                  snDevOpsStep ()
                  snDevOpsChange()
                  echo 'deployment started'      
              }
      }
      
  }
}
