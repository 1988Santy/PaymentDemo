pipeline {
   agent any
   tools {
        maven 'Maven'

    }
   stages {
        stage('Build') {
            steps {
               snDevOpsStep ()
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') { 
            steps {
               snDevOpsStep ()
                mvn -Dtest
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    
       
    
      stage('Publish') {
             steps{
                  snDevOpsStep ()
                  sleep 30
                  echo "sonar scan in progress"     
              }
      }
      
       stage('Deploy') {
             steps{
                  snDevOpsStep ()
                  snDevOpsChange()
                  echo 'deployment started'      
              }
      }
      
  }
}
