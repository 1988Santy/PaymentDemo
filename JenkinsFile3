pipeline {
   agent any
   tools {
        maven 'Maven'
    }
    
    stage('Build') {
            stages {
                stage("Staging-Deploy") {
                    steps {
                        snDevOpsStep()
                        echo 'test'
                    }
                }
                stage("Send-Report") {
                    stages {
                        stage("Alert-If-Issues") {
                            steps {
                                snDevOpsStep()
                                echo 'test'
                            }
                        }
                        stage("Conclude") {
                            steps {
                                snDevOpsStep()
                                echo 'test'
                            }
                        }
                    }
                }
            }
        }
        stage('Test') {
            parallel {
                stage('UAT test test1') {
                    steps {
                         echo 'test'
                    }
                    post {
                        success {
                            echo 'test'
                        }
                    }
                }
                stage('UAT static code test') {
                    steps {
                        snDevOpsStep()
                        snDevOpsChange()
                            echo 'test'
                    }
                }
            }
        }
   
}
